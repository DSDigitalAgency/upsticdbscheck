{
    "name": "perform-check",
    "version": "1.0.0",
    "private": true,
    "description": "Professional Node.js ESM server to perform status checks with fetch and scraping.",
    "type": "module",
    "engines": {
        "node": ">=18.17"
    },
    "scripts": {
        "dev": "PLAYWRIGHT_ENABLED=1 node --watch ./src/index.js",
        "start": "PLAYWRIGHT_ENABLED=1 NODE_ENV=production node ./src/index.js",
        "dev:no-playwright": "node --watch ./src/index.js",
        "check": "node ./src/tools/run-checks.js",
        "perform-check": "node ./perform-check.js"
    },
    "dependencies": {
        "cheerio": "^1.0.0",
        "fastify": "^4.28.1",
        "fastify-plugin": "^4.5.1",
        "pino": "^9.2.0",
        "pino-pretty": "^11.2.2",
        "dotenv": "^16.4.5",
        "playwright": "^1.48.0"
    }
}